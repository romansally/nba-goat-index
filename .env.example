# NBA GOAT Index - Environment Variables
# =========================================
# Copy this file to .env and fill in your values

# Storage Configuration
STORAGE_TYPE=local              # Options: local, s3
DATA_PATH=./data               # Local storage path (if STORAGE_TYPE=local)

# AWS Configuration (for S3 storage)
S3_BUCKET=                     # Your S3 bucket name
AWS_REGION=us-east-1          # AWS region
AWS_ACCESS_KEY_ID=            # AWS credentials (use IAM roles in production)
AWS_SECRET_ACCESS_KEY=        # AWS credentials (use IAM roles in production)

# Database Configuration
DUCKDB_PATH=./data/nba_goat.db

# Application Configuration
DEBUG=True
LOG_LEVEL=INFO

# External APIs (if needed)
BASKETBALL_REF_API_KEY=       # If using paid API
